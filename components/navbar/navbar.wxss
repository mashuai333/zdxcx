/* components/navbar.wxss */
/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #fff;
  z-index: 999;
}

.header{
    height: 100%;
    position: relative;
    background-repeat: no-repeat;
}
.imagebg{
    height: 100%;
    width: 100%;
}

/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #2c2b2b;
  font-weight: 600;
}
.head-topic{
  width: 100%;
  padding-top: 10px;
  display: flex;  
}
.topic-title{
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex:2;
  font-size: 32rpx;
  margin:15px 0 0 50rpx;
  color:#fff;
  
}
.vsbg{
  /* flex:1; */
  margin:auto;
}
.vs-img{
  width: 60rpx;
  height: 70rpx;
  margin-top: 10px;
}
.topic-cont{
  flex:2;
}
.abstract{
  color:#000;
  font-size: 32rpx;
  height: 30px;
  line-height: 30px;
  width: 50px;
  background:#fff;
  border-radius: 10rpx;
  text-align: center;
  float: left;
  margin:15px 20rpx 0 40rpx;
}
.abstract-cont{
  font-size: 24rpx;
  margin-top: 15px;
}

.classify{
  height: 55rpx;
  width: 60rpx;
  position: absolute;
  left: 16rpx;
  top: 50%;
}

.search{
    text-align: center;
    font-size: 11px;
    /* width:600rpx; */
    background:#efefef;
    position: absolute;
    top: 50%;
    left:15%;
    padding:0 150rpx;
    border-radius: 30rpx;
}
.search icon{
    position: absolute;
    top:25%;
    left: 5%;
}