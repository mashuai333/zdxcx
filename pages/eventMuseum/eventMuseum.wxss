.navbar{
  flex: none;
  display: flex;
  background: #fff;
  margin-top: 124rpx;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 74rpx;
  font-size: 32rpx;
  color:#c7c7c7;
}
.navbar .item.active{
  color: #05cdcd;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 35%;
  right: 35%;
  height: 6rpx;
  background: #05cdcd;
}